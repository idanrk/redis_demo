<%- include('./includes/nav.ejs') %>
    </head>

    <body>
        <div class="container">
            <h1>Update User</h1>
            <% if (typeof error !== 'undefined' && error.length > 0) { %>
                <span><%= error %></span>
                <% } %>
                    <form method="POST" action="/user/add">
                        <!-- Acts the same as user add. Set overrides the values-->
                        <div class="form-group">
                            <label>ID</label>
                            <input type="text" name="id" class="form-control" value="<%=user.id%>" readonly>
                        </div>
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" name="first_name" class="form-control" value="<%=user.firstname%>" required>
                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" name="last_name" class="form-control" value="<%=user.lastname%>" required>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="email" class="form-control" value="<%=user.email%>" required>
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            <input type="text" name="phone" class="form-control" value="<%=user.phone%>" required>
                        </div>
                        <input type="submit" class="btn btn-primary" value="Save">
                    </form>
        </div>
    </body>

    </html>